<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/filterInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_instructions" />

    <EditText
        android:id="@+id/dateFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/date_filter_hint"
        android:inputType="date"
        android:layout_below="@id/filterInstructions"
        android:layout_marginTop="@dimen/fab_margin"/>

    <ImageView
        android:id="@+id/dateFilterPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dateFilter"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="336dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_date_range_black_24dp" />

    <EditText
        android:id="@+id/titleFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/title_filter_hint"
        android:inputType="text"
        android:layout_below="@id/dateFilter"/>

    <EditText
        android:id="@+id/descFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/desc_filter_hint"
        android:inputType="text"
        android:layout_below="@id/titleFilter"/>

    <Button style="@style/Widget.AppCompat.Button"
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_button_text"
        android:layout_below="@id/descFilter"/>

    <Button style="@style/Widget.AppCompat.Button.Colored"
        android:id="@+id/filterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_button_text"
        android:layout_below="@id/descFilter"
        android:layout_toRightOf="@id/resetButton"/>

</RelativeLayout>
